{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["web-ui/src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "web-ui/src/**/*",
    "*.js",
    "routes/**/*.js",
    "services/**/*.js",
    "middleware/**/*.js",
    "utils/**/*.js",
    "state/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "web-ui/node_modules",
    "web-ui/dist",
    "__tests__",
    "test-results",
    "playwright-report"
  ]
}
